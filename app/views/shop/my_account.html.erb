<table class="table table-bordered">
	<tr>
		<th colspan="3">Recent Orders</th>
	</tr>
	<tr>
		<th>Number</th>
		<th>Date</th>
		<th>Total</th>
	</tr>
<% current_user.orders.each do |order|%>
	<tr>
		<td><%= order.number %></td>
		<td><%= order.completed_at %></td>
		<td><%= number_to_currency(order.total) %></td>
	</tr>
<% end %>
<table>

<% unless current_user.account.nil? %>
<table class="table table-bordered">

	<tr>
		<th>My Account <%# link_to "Edit", "/edit_account" %></th>
	</tr>
	
	<tr>
		<td>
			<address>
			<%= current_user.account.name %><br/>
			<%= current_user.account.ship_to_address_1 %><br/>
			<%= current_user.account.ship_to_address_2 %><br/>
			<%= current_user.account.ship_to_city %>, <%= current_user.account.ship_to_state %> <%= current_user.account.ship_to_zip %><br/>
			<%= current_user.account.ship_to_phone %>
			</address>
		</td>
	</tr>
</table>
<% end %>