<div id="accounts" class="col-md-12">
		
	<table class="table table-bordered table-striped">
		
		<tr>
			<td width="60%">
				<%= image_tag "https://s3.amazonaws.com/247officesuppy/400/400/#{@item.default_image_path}", :class => "media-object", :height => "250", :width => "250" %>
			</td>
			<td width="40%">
				<% @item.item_categories.each do |cat| %>
				
					<span class="label label-default"><%= cat.category.name %></span>
				<% end %>
			</td>
		</tr>
		
	</table>
	
	<table class="table table-bordered table-striped">
		
		<tr>
			<th width="20%">Number</th>
			<th width="60%">Name</th>
			<th width"10%">Price</th>
			<th width"10%">Cost</th>
		</tr>
		
		<tr>
			<td><%= best_in_place @item, :number %></td>
			<td><%= @item.name %></td>
			<td><%= number_to_currency(@item.price) %></td>
			<td><%= number_to_currency(@item.cost_price) %></td>
		</tr>
		<tr>
			<td colspan="4"><%= best_in_place @item, :description %></td>
		<tr>
		
	</table>
	
	<br/>
	
	<div class="col-md-4">
		
		<table class="table table-bordered table-condensed table-striped">
			
			<tr>
				<td colspan="2"><%= link_to "Add Account Item Price", new_item_vendor_price_path(:item_id => @item.id), :class => "btn btn-primary btn-block btn-xs", :remote => true %>
			</tr>
			
			<tr>
				<th>Vendor</th>
				<th>Price</th>
			</tr>

			<% @item.item_vendor_prices.each do |it| %>
			<tr>
				<td><%= it.vendor.name %></td>
				<td><%= number_to_currency(it.price) %></td>
			</tr>
			<% end %>

		</table>
		
	</div>
	
	<div class="col-md-4">
		
		<table class="table table-bordered table-condensed table-striped">
			
			<tr>
				<td colspan="2"><%= link_to "Add Account Item Price", new_account_item_price_path(:item_id => @item.id), :class => "btn btn-primary btn-block btn-xs", :remote => true %>
			</tr>
			
			<tr>
				<th>Account</th>
				<th>Price</th>
			</tr>

			<% @item.account_item_prices.each do |it| %>
			<tr>
				<td><%= it.account.name %></td>
				<td><%= (it.price == it.item.actual_price(it.account_id)) ? it.item.actual_price(it.account_id) : 'NULL' %></td>
			</tr>
			<% end %>

		</table>
		
	</div>
	
	<div class="col-md-4">
		
		<table class="table table-bordered table-condensed table-striped">

			<tr>
				<th>Order</th>
				<th>Ship To Name</th>
				<th>Quantity</th>
				<th>Price</th>
			</tr>

			<% @item.order_line_items.each do |it| %>
			<tr>
				<td><%= it.order.number %></td>
				<td><%= it.order.ship_to_account_name %></td>
				<td><%= it.actual_quantity %></td>
				<td><%= it.price %></td>
			</tr>
			<% end %>

		</table>
		
	</div>
	
</div>

<div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			
		</div>
	</div>
</div