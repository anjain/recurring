<% unless flash[:error] %>
	
	$('#myModal').modal("hide")
	$('body').removeClass('modal-open')
	$('.modal-backdrop').remove()
	
	<% unless @category.active %>
		$("#category_<%= @category.id -%>").addClass("danger");
	<% else %>
		$("#category_<%= @category.id -%>").removeClass("danger");
	<% end %>
	
	$("#category_<%= @category.id -%>").html("<%= j render :partial => 'categories/category.html', :format => 'html', :locals => {:category => @category} %>")
	
<% end %>