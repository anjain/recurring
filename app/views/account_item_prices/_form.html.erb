<fieldset>	
	
	<% unless params[:copy] %>
	<div id="item" class="col-md-12">
		<%= f.label :item_number, :class => "control-label" %>
		<%= f.text_field :item_number, :class => "form-control", data: {autocomplete_source: items_path} %>
	</div>
	<% end %>
	
	<% if params[:copy] %>
	<%= hidden_field_tag :copy, true %>
	<%= hidden_field_tag :account_id, @account.id %>
	<div id="copy_from" class="col-md-12">
		<%= f.label :copy_from, :class => "control-label" %>
		<%= f.text_field :copy_from, :class => "form-control", data: {autocomplete_source: accounts_path} %>
	</div>
	
	<div id="price_factor" class="col-md-12">
		<label class="control-label">Price Factor</label>
		<%= text_field_tag :price_factor, nil,:class => "form-control" %>
	</div>
	<% end %>
	
	<% unless params[:copy] %>
	<div id="account" class="col-md-12">
		<%= f.label :account_name, :class => "control-label" %>
		<%= f.text_field :account_name, :class => "form-control", data: {autocomplete_source: accounts_path}, :value => @account.name %>
	</div>
	
	<div id="price" class="col-md-12">
		<%= f.label :price, :class => "control-label" %>
		<%= f.text_field :price, :class => "form-control" %>
	</div>
	<% end %>
	
	<script>
	jQuery(function() {
		return $('#account_item_price_copy_from').autocomplete({
			source: $('#account_item_price_copy_from').data('autocomplete-source')
		})
	});
	
	jQuery(function() {
		return $('#account_item_price_account_name').autocomplete({
			source: $('#account_item_price_account_name').data('autocomplete-source')
		})
	});
	</script>
	
</fieldset>