<div id="order" class="col-md-12">
	
	<div class="widget panel panel-body">
		
		<table class="table">
			<tr class="bg-primary">
				<th width="50%">Shipping Address</th>
				<th width="50%">Billing Address</th>
			</tr>
			<tr>
				<td>
					<%= @order.ship_to_account_name %><br/>
					<% unless @order.ship_to_attention.blank? %><%= @order.ship_to_attention %><br/><% end %>
					<%= @order.ship_to_address_1 %><br/>
					<% unless @order.ship_to_address_2.blank? %><%= @order.ship_to_address_2 %><br/><% end %>
					<%= @order.ship_to_city %>, <%= @order.ship_to_state %> <%= @order.ship_to_zip %><br/>
					<%= @order.ship_to_phone %>
				</td>
				<td>
					<%= @order.bill_to_account_name %><br/>
					<% unless @order.bill_to_attention.blank? %><%= @order.bill_to_attention %><br/><% end %>
					<%= @order.bill_to_address_1 %><br/>
					<% unless @order.bill_to_address_2.blank? %><%= @order.bill_to_address_2 %><br/><% end %>
					<%= @order.bill_to_city %>, <%= @order.bill_to_state %> <%= @order.bill_to_zip %><br/>
					<%= @order.bill_to_phone %>
				</td>
			</tr>
		</table>
		<br/>
		<table class="table">
			<tr class="bg-primary">
				<th width="25%">Order Number</th>
				<th width="25%">Order Date</th>
				<th width="25%">Locked</th>
				<th width="25%">PO Number</th>
			</tr>
			<tr>
				<td><%= @order.number %></td>
				<td><%= @order.completed_at.strftime("%m/%d/%Y") %></td>
				<td><%= @order.locked ? "Yes" : "No" %></td>
				<td><%= @order.po_number %></td>
			</tr>
		</table>
		<br/>
		<table class="table">

			<tr class="bg-primary">
				<th width="15%" class="text-left" colspan="2">Item Name/Description</th>
				<th width="10%" class="text-center">Quantity</th>
				<th width="10%" class="text-center">Price</th>
				<th width="10%" class="text-right">Subtotal</th>
			</tr>

			<% @order.order_line_items.active.each_with_index do |li, idx| %>
			<tr>
				<td class="text-left"><%= li.order_line_number %></td>
				<td><%= li.item.number %> / <%= li.item.name %></td>
				<td class="text-center"><%= li.quantity.to_i %></td>
				<td class="text-center"><%= number_to_currency(li.price) %></td>
				<td class="text-right"><%= number_to_currency(li.sub_total) %></td>
			<tr>
			<% end %>

			<tr>
				<td colspan="3">Sub Total</td>
				<td colspan="2" class="text-right"><strong><%= number_to_currency(@order.sub_total) %></strong></td>
			</tr>
			<tr>
				<td colspan="3"><%= "#{@order.order_shipping_method.name} - " unless  @order.order_shipping_method.nil?%>Shipping</td>
				<td colspan="2" class="text-right"><strong> <%= number_to_currency(@order.order_shipping_method.amount) unless  @order.order_shipping_method.nil? %></strong></td>
			</tr>
			<tr>
				<td colspan="3">Order Total</td>
				<td colspan="2" class="text-right"><strong> <%= number_to_currency(@order.order_shipping_method.amount + @order.sub_total) unless @order.order_shipping_method.nil? %></strong></td>
			</tr>
		</table>
			
	</div>
	
</div>