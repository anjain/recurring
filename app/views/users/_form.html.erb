<fieldset>
	
	<div class="col-md-6">
		<%= f.label :first_name %>
		<%= f.text_field :first_name, :class => "form-control" %>
	</div>
	
	<div class="col-md-6">
		<%= f.label :last_name %>
		<%= f.text_field :last_name, :class => "form-control" %>
	</div>

	<div class="col-md-8">
		<%= f.label :email %>
		<%= f.email_field :email, :class => "form-control" %>
	</div>
	
	<div class="col-md-4">
		<%= f.label :phone_number %>
		<%= f.text_field :phone_number, :class => "form-control" %>
	</div>

</fieldset>